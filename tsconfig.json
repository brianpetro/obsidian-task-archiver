{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "target": "es2019",
        "allowJs": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "lib": ["dom", "es5", "scripthost", "es2015", "es2019"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "types": ["node", "jest", "@testing-library/jest-dom"]
    },
    "include": ["**/*.ts"]
}
